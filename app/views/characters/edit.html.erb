<%= form_for @character do |f| %>

    <%= f.label 'Name' %><br>
    <%= f.text_field :name %><br>

    <%= f.label 'Universe' %><br>
    <%= f.select :universe_ids, Universe.all.collect{|universe| [universe.name, universe.id]}, {}, :multiple => true %>

    <%= f.submit 'Update Character' %>


<%end%>