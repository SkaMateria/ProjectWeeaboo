<h1>Create a new user account!</h1>

<% if @user.errors.any? %>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
        <li class="error"> <%= msg %> </li>
    <% end %>
    </ul>
<% end %>

<%= form_for @user  do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :username %><br>
    <%= f.text_field :username %><br>
    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
    <%= f.submit "Create account" %>
<% end %>