<h1>Log in</h1>

<% if @notice %>
  <p><%= @notice %></p>
<% end %>

<%= form_tag "/login", method: "POST" do %>
  <div>Username: <br>
    <%= text_field_tag :username %>
  </div>
  <div>Password:   <br>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag "Log in" %>
<% end %>

<%= link_to "Home", home_path %>